{
  "monorepo": true,
  "root": "apps/main",
  "sourceRoot": "apps/main/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/main/tsconfig.app.json"
  },
  "projects": {
    "clients": {
      "type": "application",
      "root": "apps/clients",
      "entryFile": "main",
      "sourceRoot": "apps/clients/src",
      "compilerOptions": {
        "tsConfigPath": "apps/clients/tsconfig.app.json"
      }
    },
    "employees": {
      "type": "application",
      "root": "apps/employees",
      "entryFile": "main",
      "sourceRoot": "apps/employees/src",
      "compilerOptions": {
        "tsConfigPath": "apps/employees/tsconfig.app.json"
      }
    },
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json"
      }
    }
  }
}